@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1>Items for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No items left to do!</h3>
} 
else
{
  <ul>
    @foreach (Item item in Model)
    {
      @if (item.Status == false)
      {
        <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name | Due: @item.DueBy</li>
        @using (Html.BeginForm("StatusComplete", "Items"))
        {
          @Html.Hidden("itemId", @item.ItemId)
          <input type="submit" value="Complete">
        }
      }
      else 
      {
        <li>Completed: @Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name</li>
      }


    }
  </ul>
}

<p>@Html.ActionLink("Add new item", "Create")</p>